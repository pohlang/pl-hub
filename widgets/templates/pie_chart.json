{
  "key": "pie_chart",
  "name": "Pie Chart",
  "description": "Circular pie/donut chart widget for showing proportions and percentages",
  "category": "charts",
  "tags": ["chart", "pie", "donut", "percentage", "proportion"],
  "files": [
    {
      "path": "{{widget_name}}.poh",
      "description": "Pie chart widget implementation",
      "content": [
        "Start Program",
        "",
        "# {{widget_name}} - Pie Chart Widget",
        "# Displays data as a pie chart with percentages",
        "",
        "# Chart Configuration",
        "Set chart_title to \"Market Share Distribution\"",
        "Set chart_style to \"pie\"",
        "Set show_percentages to true",
        "Set total_value to 100",
        "",
        "# Data Segments",
        "Set segment_1_label to \"Desktop\"",
        "Set segment_1_value to 45",
        "Set segment_1_color to \"#3b82f6\"",
        "",
        "Set segment_2_label to \"Mobile\"",
        "Set segment_2_value to 35",
        "Set segment_2_color to \"#10b981\"",
        "",
        "Set segment_3_label to \"Tablet\"",
        "Set segment_3_value to 15",
        "Set segment_3_color to \"#f59e0b\"",
        "",
        "Set segment_4_label to \"Other\"",
        "Set segment_4_value to 5",
        "Set segment_4_color to \"#6b7280\"",
        "",
        "# Chart Header",
        "Write \"═══════════════════════════════════════\"",
        "Write \"  \" plus chart_title",
        "Write \"═══════════════════════════════════════\"",
        "Write \"\"",
        "",
        "# ASCII Pie Chart Visualization",
        "Write \"              ╭─────────╮\"",
        "Write \"          ╭───┤ Desktop ├───╮\"",
        "Write \"         ╱    ╰─────────╯    ╲\"",
        "Write \"        ╱        45%          ╲\"",
        "Write \"       │                       │\"",
        "Write \"  Other│                       │Mobile\"",
        "Write \"    5% │                       │35%\"",
        "Write \"       │                       │\"",
        "Write \"        ╲                     ╱\"",
        "Write \"         ╲      Tablet      ╱\"",
        "Write \"          ╲       15%      ╱\"",
        "Write \"           ╲─────────────╱\"",
        "Write \"\"",
        "",
        "# Data Table",
        "Write \"Segment Breakdown:\"",
        "Write \"┌──────────────┬─────────┬────────────┐\"",
        "Write \"│ Category     │ Value   │ Percentage │\"",
        "Write \"├──────────────┼─────────┼────────────┤\"",
        "Write \"│ \" plus segment_1_label plus \"      │ \" plus segment_1_value plus \"      │ \" plus segment_1_value plus \"%        │\"",
        "Write \"│ \" plus segment_2_label plus \"        │ \" plus segment_2_value plus \"      │ \" plus segment_2_value plus \"%        │\"",
        "Write \"│ \" plus segment_3_label plus \"        │ \" plus segment_3_value plus \"      │ \" plus segment_3_value plus \"%        │\"",
        "Write \"│ \" plus segment_4_label plus \"         │ \" plus segment_4_value plus \"       │ \" plus segment_4_value plus \"%         │\"",
        "Write \"├──────────────┼─────────┼────────────┤\"",
        "Write \"│ Total        │ 100     │ 100%       │\"",
        "Write \"└──────────────┴─────────┴────────────┘\"",
        "Write \"\"",
        "",
        "# Color Legend",
        "Write \"Color Legend:\"",
        "Write \"  ▪ \" plus segment_1_label plus \" (\" plus segment_1_color plus \")\"",
        "Write \"  ▪ \" plus segment_2_label plus \" (\" plus segment_2_color plus \")\"",
        "Write \"  ▪ \" plus segment_3_label plus \" (\" plus segment_3_color plus \")\"",
        "Write \"  ▪ \" plus segment_4_label plus \" (\" plus segment_4_color plus \")\"",
        "",
        "End Program"
      ]
    }
  ],
  "preview": [
    "═══════════════════════════════════════",
    "  Market Share Distribution",
    "═══════════════════════════════════════",
    "",
    "              ╭─────────╮",
    "          ╭───┤ Desktop ├───╮",
    "         ╱    ╰─────────╯    ╲",
    "        ╱        45%          ╲"
  ]
}
