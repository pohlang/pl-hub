{
  "key": "line_chart",
  "name": "Line Chart",
  "description": "Interactive line chart widget for visualizing time-series or sequential data",
  "category": "charts",
  "tags": ["chart", "graph", "visualization", "data", "analytics"],
  "files": [
    {
      "path": "{{widget_name}}.poh",
      "description": "Line chart widget implementation",
      "content": [
        "Start Program",
        "",
        "# {{widget_name}} - Line Chart Widget",
        "# Displays data as a line graph with multiple series support",
        "",
        "# Chart Configuration",
        "Set chart_title to \"Sales Over Time\"",
        "Set chart_width to 800",
        "Set chart_height to 400",
        "Set show_grid to true",
        "Set show_legend to true",
        "",
        "# Data Points (comma-separated x,y pairs)",
        "Set data_series_1 to \"Jan,100,Feb,150,Mar,180,Apr,220,May,280,Jun,350\"",
        "Set series_1_label to \"Product A\"",
        "Set series_1_color to \"#3b82f6\"",
        "",
        "Set data_series_2 to \"Jan,80,Feb,120,Mar,160,Apr,190,May,240,Jun,300\"",
        "Set series_2_label to \"Product B\"",
        "Set series_2_color to \"#10b981\"",
        "",
        "# Chart Header",
        "Write \"═══════════════════════════════════════\"",
        "Write \"  \" plus chart_title",
        "Write \"═══════════════════════════════════════\"",
        "Write \"\"",
        "",
        "# Display Legend",
        "If show_legend is true",
        "    Write \"Legend:\"",
        "    Write \"  ▪ \" plus series_1_label plus\" (\" plus series_1_color plus \")\"",
        "    Write \"  ▪ \" plus series_2_label plus\" (\" plus series_2_color plus \")\"",
        "    Write \"\"",
        "End",
        "",
        "# Parse and display data",
        "Write \"Chart Data:\"",
        "Write \"Series 1: \" plus data_series_1",
        "Write \"Series 2: \" plus data_series_2",
        "Write \"\"",
        "",
        "# Chart Stats",
        "Write \"Chart Dimensions: \" plus chart_width plus \"x\" plus chart_height",
        "Write \"Grid: \" plus show_grid",
        "Write \"\"",
        "",
        "# ASCII Chart Visualization",
        "Write \"    350 │                                  ●\"",
        "Write \"    300 │                          ●       ▲\"",
        "Write \"    250 │                    ●             │\"",
        "Write \"    200 │              ●     ▲             │\"",
        "Write \"    150 │        ●     ▲                   │\"",
        "Write \"    100 │  ●     ▲                         │\"",
        "Write \"     50 │  ▲                               │\"",
        "Write \"      0 └────────────────────────────────────\"",
        "Write \"        Jan Feb Mar Apr May Jun\"",
        "Write \"\"",
        "Write \"  ● \" plus series_1_label",
        "Write \"  ▲ \" plus series_2_label",
        "",
        "End Program"
      ]
    }
  ],
  "preview": [
    "═══════════════════════════════════════",
    "  Sales Over Time",
    "═══════════════════════════════════════",
    "",
    "Legend:",
    "  ▪ Product A (#3b82f6)",
    "  ▪ Product B (#10b981)",
    "",
    "    350 │                                  ●",
    "    300 │                          ●       ▲",
    "        └────────────────────────────────────"
  ]
}
