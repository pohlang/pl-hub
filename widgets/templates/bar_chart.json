{
  "key": "bar_chart",
  "name": "Bar Chart",
  "description": "Horizontal or vertical bar chart widget for categorical data comparison",
  "category": "charts",
  "tags": ["chart", "bar", "histogram", "visualization", "comparison"],
  "files": [
    {
      "path": "{{widget_name}}.poh",
      "description": "Bar chart widget implementation",
      "content": [
        "Start Program",
        "",
        "# {{widget_name}} - Bar Chart Widget",
        "# Displays data as horizontal or vertical bars",
        "",
        "# Chart Configuration",
        "Set chart_title to \"Product Sales Comparison\"",
        "Set orientation to \"horizontal\"",
        "Set bar_color to \"#8b5cf6\"",
        "Set show_values to true",
        "Set max_value to 500",
        "",
        "# Data (label,value pairs)",
        "Set category_1 to \"Product A\"",
        "Set value_1 to 450",
        "",
        "Set category_2 to \"Product B\"",
        "Set value_2 to 380",
        "",
        "Set category_3 to \"Product C\"",
        "Set value_3 to 290",
        "",
        "Set category_4 to \"Product D\"",
        "Set value_4 to 420",
        "",
        "Set category_5 to \"Product E\"",
        "Set value_5 to 310",
        "",
        "# Chart Header",
        "Write \"═══════════════════════════════════════\"",
        "Write \"  \" plus chart_title",
        "Write \"═══════════════════════════════════════\"",
        "Write \"\"",
        "",
        "# Display Horizontal Bars",
        "If orientation is \"horizontal\"",
        "    # Calculate bar lengths (scaled to 40 chars max)",
        "    Set bar_1_length to 36",
        "    Set bar_2_length to 30",
        "    Set bar_3_length to 23",
        "    Set bar_4_length to 34",
        "    Set bar_5_length to 25",
        "    ",
        "    Write category_1 plus \" │ \" plus \"████████████████████████████████████ \" plus value_1",
        "    Write category_2 plus \" │ \" plus \"██████████████████████████████ \" plus value_2",
        "    Write category_3 plus \" │ \" plus \"███████████████████████ \" plus value_3",
        "    Write category_4 plus \" │ \" plus \"██████████████████████████████████ \" plus value_4",
        "    Write category_5 plus \" │ \" plus \"█████████████████████████ \" plus value_5",
        "    Write \"          └──────────────────────────────────────\"",
        "    Write \"          0        200        400        500\"",
        "End",
        "",
        "Write \"\"",
        "Write \"Total Sales: 1850\"",
        "Write \"Average: 370\"",
        "Write \"Top Performer: \" plus category_1",
        "",
        "End Program"
      ]
    }
  ],
  "preview": [
    "═══════════════════════════════════════",
    "  Product Sales Comparison",
    "═══════════════════════════════════════",
    "",
    "Product A │ ████████████████████████████████████ 450",
    "Product B │ ██████████████████████████████ 380",
    "Product C │ ███████████████████████ 290"
  ]
}
